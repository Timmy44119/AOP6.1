<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid model="com.axelor.apps.account.db.BankStatementRule" title="Bank statements" name="bank-statement-rule-grid">
    <field name="accountManagement" />
    <field name="counterpartAccount" />
    <field name="partner" />
    <field name="ruleType" />
  </grid>

  <form model="com.axelor.apps.account.db.BankStatementRule" title="Bank statement" name="bank-statement-rule-form">
    <panel name="bankStatementMainPanel">
      <field name="accountManagement" />
      <field name="counterpartAccount" requiredIf="ruleType == 0" />
      <field name="partner" requiredIf="counterpartAccount.useForPartnerBalance" />
      <field name="ruleType" />
      <field name="searchLabel" />
    </panel>
    <panel name="functionPanel">
      <field name="testFunction" widget="CodeEditor" x-code-syntax="groovy" colSpan="12" />
    </panel>
  </form>
</object-views>